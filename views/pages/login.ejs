<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		<div class="jumbotron">

			<h1>Login</h1>

			<% if ( typeof expressFlash == 'object' && expressFlash.length > 0 ) { %>
				<div class="alert alert-danger"><%= expressFlash %></div>
			<% } %>

			<form method="post" action="/auth/login">
				<div class="form-group"> <input type="text" name="email" class="form-control"> </div>
				<div class="form-group"> <input type="password" name="password" class="form-control"> </div>
				<div class="form-group"> <button type="submit" class="btn btn-success">Login</button> </div>
			</form>
		</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>